//我的面板
class MyPanel extends JPanel{
	//定义我自己的坦克
	Hero hero = null;
	
	//构造函数
	public MyPanel() {
		hero = new Hero(10, 10);
	}
	
	//抽象paint
	@Override
	public void paint(Graphics g) {
		super.paint(g);
		//画出坦克
		
	}
}


//定义一个坦克类
class Tank {
	int x = 0;//横坐标
	int y = 0;//纵坐标
	
	public int getX() {
		return x;
	}
	public void setX(int x) {
		this.x = x;
	}
	public int getY() {
		return y;
	}

	public void setY(int y) {
		this.y = y;
	}

	public Tank(int x,int y) {
		this.x = x;
		this.y = y;
	}
}

class Hero extends Tank{
	public Hero(int x,int y) {
		super(x, y);
	}
}


